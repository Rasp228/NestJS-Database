<div class="container">
     <form action="lista" method="get">
        <div class="input-group mb-3">
        <input class="btn btn-primary" type="submit" value="Szukaj" />
        <input class="form-control" type="text" value="" placeholder="Wyszukaj po nazwie..." name="fraza"/>
        </form>
    </div>
    {{#if user.isAdmin }}
        <a class="btn btn-sm btn-primary" href="materialy_formularz/0">Dodaj</a>
    {{/if}}
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Nazwa</th>
            <th>Wartosc</th>
            <th>Rzadkosc</th>
            <th>Grupa</th>
            {{#if user.isAdmin }}
            <th>Akcje</th>
            {{/if}}
        </tr>
            {{#each materialy}}
                <tr>  
                    <td>{{this.ID}}</td>
                    <td>{{this.Nazwa}}</td>
                    <td>{{this.Wartosc}}</td>
                    <td>{{this.Rzadkosc}}</td>
                    <td>{{this.Grupa}}</td>
                    {{#if ../user.isAdmin}}
                    <td>
                        <a class="btn btn-sm btn-primary" href="materialy_formularz/{{this.ID}}">Edytuj</a> 
                        <a class="btn btn-danger btn-sm" href="delete/{{this.ID}}">Usu≈Ñ</a>
                    </td>
                    {{/if}}
                </tr>
            {{/each}} 
    </table>
</div>