<div class="container">
    {{#if user.isAdmin }}
        <a class="btn btn-sm btn-primary" href="materialy_formularz/0">Dodaj</a>
    {{/if}}
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Nazwa</th>
            <th>Wartosc</th>
            <th>Rzadkosc</th>
            <th>Grupa</th>
            <th>Akcje</th>
        </tr>
            {{#each materialy}}
                <tr>  
                    <td>{{this.ID}}</td>
                    <td>{{this.Nazwa}}</td>
                    <td>{{this.Wartosc}}</td>
                    <td>{{this.Rzadkosc}}</td>
                    <td>{{this.Grupa}}</td>
                    {{ user.isAdmin }}
                    {{#if ../user.isAdmin}}
                    <td>
                        <a class="btn btn-sm btn-primary" href="materialy_formularz/{{this.ID}}">Edytuj</a> 
                        <a class="btn btn-danger btn-sm" href="delete/{{this.ID}}">Usu≈Ñ</a>
                    </td>
                    {{/if}}
                </tr>
            {{/each}} 
    </table>
</div>